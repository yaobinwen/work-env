# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{md,yaml,yml}]
indent_style = space
indent_size = 2

[*.{py,sh}]
indent_style = space
indent_size = 4
